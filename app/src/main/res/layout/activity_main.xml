<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/container">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MainGrid"
        android:orientation="vertical"
        android:rowCount="8"
        android:columnCount="6"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/btnMultiply"
            android:layout_column="4"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="3"
            android:enabled="true"
            android:clickable="true"
            android:onClick="btnMultiplyClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="^"
            android:id="@+id/btnPower"
            android:layout_column="1"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="4"
            android:enabled="true"
            android:clickable="true"
            android:onClick="btnPowerClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="var"
            android:id="@+id/btnVar"
            android:layout_column="2"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="4"
            android:enabled="true"
            android:clickable="true"
            android:onClick="btnVarClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;-"
            android:id="@+id/btnErase"
            android:layout_column="3"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="4"
            android:enabled="true"
            android:clickable="true"
            android:onClick="btnEraseClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/btn1"
            android:layout_column="1"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="0"
            android:enabled="true"
            android:clickable="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/btn2"
            android:layout_column="2"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="0"
            android:enabled="true"
            android:clickable="true"
            android:onClick="onClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/btn3"
            android:layout_column="3"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="0"
            android:enabled="true"
            android:clickable="true"
            android:onClick="btn3Click" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/btnPlus"
            android:layout_column="4"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="0"
            android:enabled="true"
            android:clickable="true"
            android:onClick="btnPlusClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/btn4"
            android:layout_column="1"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="1"
            android:enabled="true"
            android:clickable="true"
            android:onClick="btn4Click" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/btn5"
            android:layout_column="2"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="1"
            android:enabled="true"
            android:clickable="true"
            android:onClick="btn5Click" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/btn6"
            android:layout_column="3"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="1"
            android:enabled="true"
            android:clickable="true"
            android:onClick="btn6Click" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/btnMinus"
            android:layout_column="4"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="1"
            android:enabled="true"
            android:clickable="true"
            android:onClick="btnMinusClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/btn7"
            android:layout_column="1"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="2"
            android:enabled="true"
            android:clickable="true"
            android:onClick="btn7Click" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/btn8"
            android:layout_column="2"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="2"
            android:enabled="true"
            android:clickable="true"
            android:onClick="btn8Click" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/btn9"
            android:layout_column="3"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="2"
            android:enabled="true"
            android:clickable="true"
            android:onClick="btn9Click" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/btnDivide"
            android:layout_column="4"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="2"
            android:enabled="true"
            android:clickable="true"
            android:onClick="btnDivideClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/btn0"
            android:layout_column="1"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="3"
            android:enabled="true"
            android:clickable="true"
            android:onClick="btn0Click" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=","
            android:id="@+id/btnComa"
            android:layout_column="2"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="3"
            android:enabled="true"
            android:clickable="true"
            android:onClick="btnComaClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:id="@+id/btnEqual"
            android:layout_column="3"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="3"
            android:enabled="true"
            android:clickable="true"
            android:onClick="btnEqualClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="("
            android:id="@+id/btnOpen"
            android:layout_column="4"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="4"
            android:enabled="true"
            android:clickable="true"
            android:onClick="btnOpenClick" />

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Résoudre"
            android:id="@+id/btnSolve"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="5"
            android:layout_columnSpan="3"
            android:singleLine="true"
            android:layout_column="1"
            android:enabled="true"
            android:clickable="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=")"
            android:id="@+id/btnClose"
            android:layout_column="4"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:maxHeight="60dp"
            android:minWidth="60dp"
            android:layout_row="5"
            android:enabled="true"
            android:clickable="true"
            android:onClick="btnCloseClick" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtEquation"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/MainGrid"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>